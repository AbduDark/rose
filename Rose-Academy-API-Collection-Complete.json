
{
	"info": {
		"name": "Rose Academy API - Complete Collection",
		"description": "Complete API collection for Rose Academy with comprehensive error handling and localization support",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"version": "2.0.0"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://rose.htieducation.com/api",
			"type": "string"
		},
		{
			"key": "admin_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "student_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "language",
			"value": "ar",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data && response.data.access_token) {",
									"        pm.environment.set('student_token', response.data.access_token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Accept-Language",
								"value": "{{language}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"أحمد محمد\",\n    \"email\": \"ahmed@example.com\",\n    \"password\": \"Password123!\",\n    \"password_confirmation\": \"Password123!\",\n    \"gender\": \"male\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data && response.data.access_token) {",
									"        if (response.data.user.role === 'admin') {",
									"            pm.environment.set('admin_token', response.data.access_token);",
									"        } else {",
									"            pm.environment.set('student_token', response.data.access_token);",
									"        }",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Accept-Language",
								"value": "{{language}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"ahmed@example.com\",\n    \"password\": \"Password123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Accept-Language",
								"value": "{{language}}"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{student_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"logout_all_devices\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/logout",
							"host": ["{{base_url}}"],
							"path": ["auth", "logout"]
						}
					}
				},
				{
					"name": "Logout All Devices",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Accept-Language",
								"value": "{{language}}"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{student_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"logout_all_devices\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/logout",
							"host": ["{{base_url}}"],
							"path": ["auth", "logout"]
						}
					}
				}
			]
		},
		{
			"name": "Courses",
			"item": [
				{
					"name": "Get All Courses",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data && response.data.length > 0) {",
									"        pm.environment.set('course_id', response.data[0].id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Accept-Language",
								"value": "{{language}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/courses?page=1&per_page=10&search=&level=&language=&min_price=&max_price=&sort_by=created_at&sort_order=desc",
							"host": ["{{base_url}}"],
							"path": ["courses"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "per_page",
									"value": "10"
								},
								{
									"key": "search",
									"value": ""
								},
								{
									"key": "level",
									"value": ""
								},
								{
									"key": "language",
									"value": ""
								},
								{
									"key": "min_price",
									"value": ""
								},
								{
									"key": "max_price",
									"value": ""
								},
								{
									"key": "sort_by",
									"value": "created_at"
								},
								{
									"key": "sort_order",
									"value": "desc"
								}
							]
						}
					}
				},
				{
					"name": "Get Course Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Accept-Language",
								"value": "{{language}}"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{student_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/courses/1",
							"host": ["{{base_url}}"],
							"path": ["courses", "1"]
						}
					}
				}
			]
		}
	]
}
